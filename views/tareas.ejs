                  <label for="materia" >Estado del trabajo:</label>
                  <select id="materia" name="materia" required>
                    <option value="Calculo" <%= tarea.materia == 'Calculo' ? 'selected' : '' %>>Calculo</option>
                    <option value="Estadistica" <%= tarea.materia == 'Estadistica' ? 'selected' : '' %>>Estadistica</option>
                    <option value="Programacion" <%= tarea.materia == 'Programacion' ? 'selected' : '' %>>Programacion</option>
                </select>
                </div>
                <div class="form-group">
