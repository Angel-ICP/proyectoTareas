                    <option value="1" <%= tarea.parcial == '1' ? 'selected' : '' %>>1</option>
                    <option value="2" <%= tarea.parcial == '2' ? 'selected' : '' %>>2</option>
                    <option value="3" <%= tarea.parcial == '3' ? 'selected' : '' %>>3</option>
                </select>
                </div>
                <div class="form-group">
