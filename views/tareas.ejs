        </div>

    </div>
    <script>
        'use strict';
        const tabs = document.querySelectorAll('[data-id]');
        const contents = document.querySelectorAll('[data-content]');
        let id = 0;

        tabs.forEach(function (tab) {
            tab.addEventListener('click', function () {
                tabs[id].classList.remove('active');
                tab.classList.add('active');
                id = tab.getAttribute('data-id');
                contents.forEach(function (box) {
                    box.classList.add('hide');
                    if (box.getAttribute('data-content') == id) {
                        box.classList.remove('hide');
                        box.classList.add('show');
                    }
                });
            });
        });
    </script>
    <% tareas.forEach(tarea=> { %>

      <div class="modal fade" id="editCalculo<%= tarea.id %>" tabindex="-1" role="dialog"
        aria-labelledby="editCalculoLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div style="background-color: rgba(131, 131, 170, 0.849); width: 540px;" class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="editCalculoLabel">Editar Trabajo</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form action="/proyecto/tareas/edit/<%= tarea.id %>" method="POST">
