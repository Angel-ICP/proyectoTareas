    <div class="w-full max-w-3xl mx-auto">
        <div class="bg-background rounded-lg shadow-lg overflow-hidden">
          <div class="h-48 bg-[#00b894] relative">
            <img
              src="https://1000marcas.net/wp-content/uploads/2022/01/UNID-Logo.png"
              alt="Profile Banner"
              width="192"
              height="192"
              style="aspect-ratio: 192 / 192; object-fit: cover;"
              class="object-cover w-full h-full"
            />
            <div class="absolute bottom-0 left-0 right-0 flex items-center justify-center -mb-12">
              <span class="relative flex shrink-0 overflow-hidden rounded-full w-24 h-24 ring-4 ring-background">
                <img class="aspect-square h-full w-full" alt="" src="/uploads/<%= usuario.files %>" />  <!-- AquÃ­ usa la URL de la imagen del perfil -->
              </span>

        
            </div>
          </div>
          <div class="pt-16 px-6 pb-6 grid gap-6">
            <div class="flex items-center justify-center">
              <div class="text-center">
                <h2 class="text-2xl font-bold"><%= usuario.name %> <%= usuario.middleName %> <%= usuario.lastName %></h2>
                <!-- <p class="text-muted-foreground"><%= usuario.carrera %></p>  Muestra la carrera del usuario -->
              </div>
            </div>
            <div class="grid gap-2">
              <div class="grid gap-1">
                <p class="text-sm text-muted-foreground">Name: <%= usuario.name %> <%= usuario.middleName %> <%= usuario.lastName %></p>
                <p class="text-sm text-muted-foreground">Email: <%= usuario.email %></p>
                <p class="text-sm text-muted-foreground">Phone: <%= usuario.phone %></p>
              </div>
              <div class="flex items-center justify-center gap-4">
                <a class="text-muted-foreground hover:underline" href="#">
